import java.util.Scanner;
public class Main{

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int result=0;
		int[] arr=new int[n];
		for(int i=0;i<n;i++) {
			arr[i]=sc.nextInt();
		}
		for (int j=0;j<n-1;j++) {
			result=result+(arr[j]-1);
		}
		System.out.printf("%d", result+arr[n-1]);
	}

}
