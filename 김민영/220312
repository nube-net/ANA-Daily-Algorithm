#include <stdio.h>
int main(void){
    int N;
    scanf("%d",&N);
    int arr[N];
    for (int i=1;i<=N;i++){
        scanf("%d",&arr[i-1]);
    }
    if(arr[1]-arr[0]==arr[2]-arr[1]){
        int gap=arr[1]-arr[0];
        printf("%d",arr[N-1]+gap);
    }
    else if(arr[1]/arr[0]==arr[2]/arr[1]){
        int div=arr[1]/arr[0];
        printf("%d",arr[N-1]*div);
    }
}
