#include <stdio.h>

int main()
{
	int N1, N2;
	int arr[3];
	int largest = 0;
	scanf("%d %d", &N1, &N2);

	arr[0] = N1 * N2;
	arr[1] = N1 + N2;
	arr[2] = N1 - N2;

	if ((arr[0] == arr[1] && arr[0]>=arr[2]) || (arr[0] == arr[2] && arr[0] >= arr[1]) || (arr[1] == arr[2]) && arr[1] >= arr[0])
		printf("NIE"); 
	else {
		if (N1 < 0)
			printf("(%d)", N1);
		else
			printf("%d", N1);

		for (int i = 0; i < 3; i++) {
			if (arr[largest] < arr[i])
				largest = i;
		}
		if (largest ==0)
			printf("*");
		else if (largest == 1)
			printf("+");
		else
			printf("-");

		if (N2 < 0)
			printf("(%d)=", N2);
		else
			printf("%d=", N2);

		if(arr[largest]<0)
			printf("(%d)\n", arr[largest]);
		else
			printf("%d\n", arr[largest]);
	}

	return 0;
}
